

echo $nm_n "checking for $nm_feature ...$nm_c"

cat << END >> $NM_AUTOCONF_ERR

----------------------------------------
checking for $nm_feature

END

nm_found=no

if test -n "$nm_feature_name"; then
	nm_have_feature=`echo $nm_feature_name \
                   | tr abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ`
fi

if test -n "$nm_feature_path"; then
  for nm_tmp in $nm_feature_path; do
		nm_feature_inc_path="$nm_feature_inc_path -I $nm_tmp"
  done
fi

cat << END > $NM_AUTOTEST.c

#include <sys/types.h>
$nm_feature_incs

int main(void) {
    $nm_feature_test;
    return 0;
}

END


nm_test_out=$nm_binout$NM_AUTOTEST
if [ "$CC_NAME" = "msvc" ]; then
	nm_test_out="$nm_binout$NM_AUTOTEST$nm_binext \
	             $nm_objout$NM_AUTOTEST$nm_objext"
fi

nm_test="$CC $CC_TEST_FLAGS $CC_AUX_FLAGS $nm_feature_inc_path \
					$nm_test_out $NM_AUTOTEST.c \
					$NM_TEST_LD_OPT $nm_feature_libs"

nm_feature_inc_path=


`$nm_test >> $NM_AUTOCONF_ERR 2>&1`


if [ -x $NM_AUTOTEST ]; then

  case "$nm_feature_run" in

    yes)

      if `$NM_AUTOTEST >> $NM_AUTOCONF_ERR 2>&1`; then
        echo " found"
        nm_found=yes

        if test -n "$nm_feature_name"; then
          have=$nm_have_feature . auto/have
        fi

      else
        echo " found but is not working"
      fi
    ;;

    value)

      if `$NM_AUTOTEST >> $NM_AUTOCONF_ERR 2>&1`; then
        echo " found"
        nm_found=yes

        cat << END >> $NM_AUTO_CONFIG_H

#ifndef $nm_feature_name
#define $nm_feature_name  `$NM_AUTOTEST`
#endif

END
      else
        echo " found but is not working"
      fi
    ;;

    bug)

      if `$NM_AUTOTEST >> $NM_AUTOCONF_ERR 2>&1`; then
        echo " not found"

      else
        echo " found"
        nm_found=yes

        if test -n "$nm_feature_name"; then
          have=$nm_have_feature . auto/have
        fi
      fi
    ;;

    *)
      echo " found"
      nm_found=yes

      if test -n "$nm_feature_name"; then
        have=$nm_have_feature . auto/have
      fi
    ;;

  esac

else
  echo " not found"

  echo "----------"    >> $NM_AUTOCONF_ERR
  cat $NM_AUTOTEST.c   >> $NM_AUTOCONF_ERR
  echo "----------"    >> $NM_AUTOCONF_ERR
  echo $nm_test        >> $NM_AUTOCONF_ERR
  echo "----------"    >> $NM_AUTOCONF_ERR
fi

rm -rf $NM_AUTOTEST*
